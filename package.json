{
	"name": "hugin-beta",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build --mode build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npx @biomejs/biome check",
		"lint:fix": "npx @biomejs/biome check --write",
		"test": "tsc --noEmit && biome check && npm run build && npm run test:unit -- --run",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^24.10.1",
		"axe-core": "^4.10.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.0.4",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@mistralai/mistralai": "^1.10.0",
		"@vestfoldfylke/loglady": "^1.5.0",
		"@vscode/markdown-it-katex": "^1.1.2",
		"highlight.js": "^11.11.1",
		"katex": "^0.16.25",
		"markdown-it": "^14.1.0",
		"mongodb": "^6.20.0",
		"ollama": "^0.6.3",
		"openai": "^6.7.0",
		"pdf-lib": "^1.17.1",
		"zod": "^4.1.13"
	}
}
